@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Classroom2.Models.Classroom>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if(User.Identity.IsAuthenticated)
{ 
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}

@using (Html.BeginForm("Index", "Classroom", FormMethod.Get, new { @class = "form-inline" }))
{
    @Html.TextBox("SearchString", null, new { @class = "form-control", @placeholder="Name" }) <input type="submit" value="Filter" class="btn btn-default" />
}

<br />

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortBy = ViewBag.SortNameParameter, searchString = Request.QueryString["searchString"], page = Request.QueryString["page"] })
        </th>
        <th>
            @Html.ActionLink("Places", "Index", new { sortBy = ViewBag.SortPlacesParameter, searchString = Request.QueryString["searchString"], page = Request.QueryString["page"] })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Places)
        </td>
        <td>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @: |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @: |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = Request.QueryString["searchString"], sortBy = Request["sortBy"] }))
